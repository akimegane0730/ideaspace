.user-editPage
  .container
    = form_with model: @user, url: { action: :update }, html: { class: 'listForm' }, local: true do |f|
      - if @user.errors.any?
        %p.text-danger 名前は1～20文字以内で入力してください
      = f.label :name
      %br/

      = f.collection_select :player_id, Player.all, :id, :name, {prompt: "---"}
      
      = f.text_field :name, class: "form-control listName", placeholder: "UserName"
      .text-center= f.submit "変更する", class: "submitBtn"

  
